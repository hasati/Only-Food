<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cool.foodie">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/onlyfood_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/onlyfood_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".loginUtility.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".loginUtility.RegisterActivity"
            android:label="Register User" />
        <activity
            android:name=".EattingChoiceActivity"
            android:label="Choice" />
        <activity
            android:name=".breakfastMenu.BreakFastActivity"
            android:label="@string/title_activity_break_fast"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".lunchMenu.LunchActivity"
            android:label="@string/title_activity_lunch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dinnerMenu.DinnerActivity"
            android:label="@string/title_activity_dinner"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name= ".checkoutUtility.CheckOutActivity"
            android:label="CheckOut"></activity>
    </application>

</manifest>